#############################
# zsh environment variables #
#############################

# Binary search paths
typeset -U path PATH
path=("~/.local/bin" $path)
export PATH

# Theme setup
if ! $_starship; then
	fpath=("$ZSH_HOME/themes" $fpath)
	autoload -Uz promptinit && promptinit
	prompt myu
fi

# Set editor to neovim
EDITOR="/bin/nvim"

# Config paths
export XDG_CONFIG_HOME=$ZSH_HOME/config
export STARSHIP_CONFIG=$XDG_CONFIG_HOME/starship.toml
